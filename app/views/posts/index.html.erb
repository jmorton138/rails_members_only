<% if user_signed_in? %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
    <%= link_to 'Sign In', new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>

<%= link_to 'New Post', new_post_path %>
<%= current_user %>
<h1>Members Only!</h1>

<ul>
<%  @posts.each do |post| %>
    <li><%= post.body %> 
    <% if user_signed_in? %>
    <%= post.user.email %>
    <% end %>
    </li>

<% end %>
</ul>